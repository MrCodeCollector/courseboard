.form-group
  label Title*
  input.form-control(type="text" ng-model="course.title" required)
.form-group
  label Instructor
  select.form-control(ng-model="course.instructor")
    option(ng-repeat="instructor in instructors" value="{{instructor._id}}") {{instructor.fullname}}
.form-group
  label Description
  textarea.form-control(type="text" ng-model="course.description")

.form-group
  label Start Date
  p.input-group
    input.form-control(type='text', uib-datepicker-popup='{{format}}', ng-model='course.startsOn', is-open='startsOnOpen', close-text='Close', alt-input-formats='altInputFormats')
    span.input-group-btn
      button.btn.btn-default(type='button', ng-click='startsOnOpen = !startsOnOpen')
        i.glyphicon.glyphicon-calendar
.form-group
  label End Date
  p.input-group
    input.form-control(type='text', uib-datepicker-popup='{{format}}', ng-model='course.endsOn', is-open='endsOnOpen', close-text='Close', alt-input-formats='altInputFormats')
    span.input-group-btn
      button.btn.btn-default(type='button', ng-click='endsOnOpen = !endsOnOpen')
        i.glyphicon.glyphicon-calendar
.form-group
  label Credit Hours (Hours per Week in Class)
  select.form-control(ng-model="course.hours")
    option(value="1") 1 Hour
    option(value="2") 2 Hours
    option(value="3") 3 Hours
    option(value="4") 4 Hours
    option(value="5") 5 Hours
    option(value="6") 6 Hours
    option(value="7") 7 Hours
    option(value="8") 8 Hours
    option(value="9") 9 Hours
    option(value="10") 10 Hours

