.row
  .col-sm-12 
    h4 {{course.title | limitTo:30}} #[span {{course.title.length > 55 ? '...' : ''}}]
.row
  .col-sm-3.col-xs-6
    {{course.instructor.fullname}}
    br
    ng-pluralize(count='course.students.length', 
                 when="{'1': '1 Participant', 'other': '{} Participants' }") 
  .col-sm-3.col-xs-6
    | {{course.location | limitTo:22}} #[span {{course.location.length > 22 ? '...' : ''}}]
    br
    span(ng-bind="course.startsOn | date:'MMM dd'")
    |  - 
    span(ng-bind="course.endsOn | date:'MMM dd'")
  .col-sm-3.col-xs-6
  .col-sm-3.col-xs-6
    ng-pluralize(count='course.hours', 
                 when="{'1': '1 hr/week', 'other': '{} hrs/week' }")
    br


