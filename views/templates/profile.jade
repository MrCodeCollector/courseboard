.container
  .row
    .col-sm-4.col-sm-offset-1
      .card
        h3 {{user.first}} {{user.last}}
        p {{user.username}}
      
      hr
      
      h3 Courses
      a(href="courses/{{course._id}}" ng-repeat="course in user.courses") {{course.title}}
        br 
      
      hr
      
      h3 Products
      a(href="products/{{product._id}}" ng-repeat="product in user.products") {{product.name}}
        br
    
    .col-sm-5.col-sm-offset-1
      h3 Announcements
      hr
      div(ng-init="profile = true" ng-include="'templates/post'", ng-repeat="post in posts")

