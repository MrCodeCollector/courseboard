.row
  .col-sm-3.col-sm-offset-1
    h3 {{user.first}} {{user.last}}
    p {{user.username}}
    
    hr
    
    h3 Courses
    a.list-group-item(href="courses/{{course._id}}" ng-repeat="course in user.courses") {{course.title}}
  
  .col-sm-6.col-sm-offset-1
    h3 Announcements
    hr
    div(ng-init="profile = true" ng-include="'templates/post'", ng-repeat="post in posts")

