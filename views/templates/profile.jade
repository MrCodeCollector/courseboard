.container
  .row
    .col-sm-10.col-sm-offset-1
      h4 Instructor Dashboard
      .card
        table.table
          tr
            th Title
            th Dates
            th Status
            th Update
          tr(ng-repeat="course in user.courses")
            td {{course.title}}
            td
              span(ng-bind="course.startsOn | date:'MMM dd'")
              |  - 
              span(ng-bind="course.endsOn | date:'MMM dd'")
            td {{course.publishedAt ? 'Live': 'Draft'}}
            td 
              .btn-toolbar
                .btn-group
                  a.btn.btn-danger.btn-sm Publish
                .btn-group
                  a.btn.btn-warning.btn-sm Edit
  hr 
  .row
    .col-sm-4.col-sm-offset-1
      .card
        h3 {{user.first}} {{user.last}} #[small {{user.username}}]
        a.small(href="/settings") Account Settings
      
      hr
      
      h3 Courses
      p(ng-repeat="course in user.enrolledCourses" ng-show="course.enrolled")
        a(href="courses/{{course._id}}") {{course.title}} 
        btn.btn-default.cancel-button(ng-init="course.enrolled = true" ng-click="unenroll(course)" ng-show="course.enrolled")
          i.ion-android-cancel
      hr
      
      h3 Products
      p(ng-repeat="product in user.products" ng-show="product.joined")
        a(href="products/{{product._id}}") {{product.name}} 
        btn.btn-default.cancel-button(ng-init="product.joined = true" ng-click="unjoin(product)" ng-show="product.joined")
          i.ion-android-cancel 
    
    .col-sm-5.col-sm-offset-1
      h3 Announcements
      hr
      div(ng-init="profile = true" ng-include="'templates/post'", ng-repeat="post in posts")


.btn.btn-primary.btn-block(ng-cloak ng-click="enroll()" ng-show="isCoursesLoaded && !enrolled") Enroll
        .btn.btn-success.btn-block.no-hover(ng-show='isCoursesLoaded && enrolled') Enrolled