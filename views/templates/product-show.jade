.container
  .row
    .col-sm-9
      //- PRODUCT INFO
      legend {{product.name}}
      p {{product.problem}}
      .text-right
        a.btn.btn-sm.btn-default(href="/products-edit/{{product._id}}") Edit Product
      br
      .row
        .col-sm-4.text-center
          a(href='{{product.githubUrl}}' type="submit") #[i.ion.icon-github] GitHub Repo
        .col-sm-4.text-center
          a(href='{{product.trelloUrl}}' type="submit") Trello
        .col-sm-4.text-center
          a(href='{{product.liveUrl}}' type="submit", disabled="disabled") Live Site
    .col-sm-3
      .card
        .btn.btn-primary.btn-block(ng-cloak ng-click="join()" ng-show="isProductsLoaded && !joined") Join
        .btn.btn-success.btn-block(ng-show='isProductsLoaded && joined') Joined
        hr
        h4 Advisor
        a(href="users/{{product.instructor._id}}") {{product.instructor.fullname}}
        h4 Course
        a(href="courses/{{product.course._id}}") {{product.course.title}}
        h4 Contributors
        a(href="users/{{contributor._id}}" ng-repeat="contributor in product.contributors") {{contributor.username}}
          br
