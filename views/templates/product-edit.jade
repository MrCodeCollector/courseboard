.container
  .row
    .col-sm-8.col-sm-offset-2
      legend Product Information
      form(ng-submit="updateProduct()")
        .row
          .col-sm-12
            .form-group
              label Product Name or Codename*
              input.form-control(type="text" ng-model="product.name" required)
        .row
          .col-sm-4
            .form-group
              label Advisor*
              select.form-control(ng-model="product.instructor" required)
                option(ng-repeat="instructor in instructors" value="{{instructor._id}}") {{instructor.fullname}}
          .col-sm-8
            .form-group
              label Course
              select.form-control(ng-model="product.course")
                option(ng-repeat="course in courses" value="{{course._id}}") {{course.title}}
        .row
          .col-xs-12
            .form-group
              label What problem are you solving?*
              input.form-control(type="text" ng-model="product.problem" required)
        br
        legend External Links
        .row
          .col-sm-4
            .form-group
              label GitHub Repo URL
              input.form-control(ng-model='product.githubUrl')
          .col-sm-4
            .form-group
              label Agile Board URL
              input.form-control(ng-model='product.agileUrl')
          .col-sm-4
            .form-group
              label Live Site URL
              input.form-control(ng-model='product.liveUrl')

        br
        legend Product Plan #[small.text-muted (Its natural for these answers to change as you learn more)]
        .form-group
          label Who is your customer? Who pays you $?
          input.form-control(type="text" ng-model="product.customer")
        .form-group
          label What assumptions about the world must be true for your product to succeed?
          textarea.form-control(type="text" ng-model="product.assumptions" rows="3")
        .form-group
          label Describe your product when it is 100% finished.
          textarea.form-control(type="text" ng-model="product.finishedProduct" rows="3")
        .form-group
          label In contrast, describe your absoulte (absolute!) minimum viable product.
          textarea.form-control(type="text" ng-model="product.mvp" rows="3")
        .btn-toolbar.pull-right
          .btn-group
            .btn.btn-danger(ng-click="deleteProduct()") Delete Product
          .btn-group
            button.btn.btn-primary(type="submit") Update Product
