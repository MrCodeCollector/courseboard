.row
  .col-sm-8
    .form-group
      label Title*
      input.form-control(type="text" ng-model="product.title" required)
  .col-sm-4
    .form-group
      label Advisor
      select.form-control(ng-model="product.instructor")
        option(ng-repeat="instructor in instructors" value="{{instructor._id}}") {{instructor.fullname}}
.row
  .col-sm-4
    .form-group
      label GitHub Repo URL
      input.form-control(ng-model='product.githubUrl')
  .col-sm-4
    .form-group
      label Agile Board URL
      input.form-control(ng-model='product.agileUrl')
  .col-sm-4
    .form-group
      label Live Site URL
      input.form-control(ng-model='product.liveUrl')

.form-group
  label Description
  textarea.form-control(type="text" ng-model="product.description" rows="10")
